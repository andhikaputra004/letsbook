<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/iv_ticket"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="parent"/>
    <TextView android:layout_width="@dimen/dimen_0dp"
              android:layout_height="wrap_content"
              android:id="@+id/tv_title"
              android:layout_marginLeft="@dimen/dimen_24dp"
              android:layout_marginRight="@dimen/dimen_24dp"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toBottomOf="@id/iv_ticket"
              android:textSize="@dimen/font_18sp"
    />
    <ImageView android:layout_width="wrap_content"
               android:id="@+id/iv_time"
               android:layout_marginTop="@dimen/dimen_10dp"
               android:layout_height="wrap_content"
               app:layout_constraintLeft_toLeftOf="parent"
               android:layout_marginStart="@dimen/dimen_24dp"
               app:layout_constraintTop_toBottomOf="@id/tv_title"
               app:srcCompat="@drawable/ic_access_time_black_24dp"/>

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintLeft_toLeftOf="parent"
               android:layout_marginStart="@dimen/dimen_24dp"
               app:layout_constraintTop_toBottomOf="@id/iv_time"
               android:layout_marginTop="@dimen/dimen_10dp"
               android:src="@drawable/ic_location_on_black_24dp"
               android:id="@+id/iv_location"
    />
    <TextView android:layout_width="@dimen/dimen_0dp"
              android:layout_height="wrap_content"
              app:layout_constraintLeft_toRightOf="@id/iv_time"
              app:layout_constraintRight_toRightOf="parent"
              android:layout_marginTop="@dimen/dimen_10dp"
              app:layout_constraintTop_toBottomOf="@id/tv_title"
              android:layout_marginStart="@dimen/dimen_10dp"
              android:layout_marginEnd="@dimen/dimen_24dp"
              android:id="@+id/tv_time"/>
    <TextView android:layout_width="@dimen/dimen_0dp"
              android:layout_height="wrap_content"
              android:id="@+id/tv_location"
              app:layout_constraintLeft_toRightOf="@id/iv_location"
              app:layout_constraintTop_toBottomOf="@id/iv_time"
              android:layout_marginTop="@dimen/dimen_10dp"
              android:layout_marginLeft="@dimen/dimen_24dp"
              app:layout_constraintRight_toRightOf="parent"
              android:layout_marginRight="@dimen/dimen_24dp"
    />
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/iv_ticket_price"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintTop_toBottomOf="@id/iv_location"
               android:src="@drawable/ic_confirmation_number_black_24dp"
               android:layout_marginStart="@dimen/dimen_24dp"
               android:layout_marginTop="@dimen/dimen_10dp"
               app:layout_constraintBottom_toBottomOf="parent"
               android:layout_marginBottom="@dimen/dimen_10dp"/>


    <TextView android:layout_width="@dimen/dimen_0dp"
              android:layout_height="wrap_content"
              android:id="@+id/tv_price"
              app:layout_constraintLeft_toRightOf="@id/iv_ticket_price"
              app:layout_constraintTop_toBottomOf="@id/tv_location"
              android:layout_marginTop="@dimen/dimen_15dp"
              android:layout_marginLeft="@dimen/dimen_24dp"/>
</android.support.constraint.ConstraintLayout>