<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <include
            android:id="@+id/toolbar_layout"
            layout="@layout/toolbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

    <TextView android:layout_width="@dimen/dimen_0dp"
              android:layout_height="wrap_content"
              android:id="@+id/tv_info"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
              android:layout_margin="@dimen/dimen_24dp"
              android:text="1. Dalam menggunakan layanan letsbook untuk melakukan pemesanan tiket, pengguna secara langsung bertanggung jawab menyetujui memberikan seluruh data yang sah dan valid sesuai identitas resmi"/>
    <TextView android:layout_width="@dimen/dimen_0dp"
              android:layout_height="wrap_content"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              android:id="@+id/tv_info_1"
              app:layout_constraintTop_toBottomOf="@id/tv_info"/>
</android.support.constraint.ConstraintLayout>